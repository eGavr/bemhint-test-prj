{
    "levels": [
        "*.blocks"
    ],

    "excludePaths": [
        "node_modueles/**"
    ],

    "plugins": {
        "bemhint-plugins-jshint": {
            "techs": {
                "js|deps.js": true
            }
        },
        "bemhint-plugins-jscs": {
            "techs": {
                "js": {
                    "requireCurlyBraces": ["if"],
                    "disallowSpacesInFunction": {
                        "beforeOpeningRoundBrace": true
                    }
                }
            }
        },
        "bemhint-plugins-redundant-techs": {
            "techs": {
                "bemhtml": true
            }
        },
        "bemhint-plugins-check-empty-files": true
    }
}
